Category:
  Graphics

Build-type:
  Simple

-- Extra files to be distributed with the package, such as examples or
-- a README.
-- Extra-source-files:

-- Constraint on the version of Cabal needed to build this package.
Cabal-version:
  >= 1.10

Library
  Default-language:
    Haskell2010

  Default-extensions:
    BangPatterns,
    FlexibleInstances,
    FunctionalDependencies,
    MultiParamTypeClasses,
    OverloadedStrings,
    ScopedTypeVariables,
    TypeFamilies,
    TypeOperators

  GHC-options:
    -Wall -Werror -ddump-splices -fno-warn-orphans

  Hs-source-dirs:
    src

  -- Modules exported by the library.
  Exposed-modules:
    Control.Monad.Progress,
    Graphics.Forensics.Algorithms,
    Graphics.Forensics.Analyser,
    Graphics.Forensics.Array,
    Graphics.Forensics.Channels,
    Graphics.Forensics.Color,
    Graphics.Forensics.Image,
    Graphics.Forensics.Report,
    Graphics.Forensics.Shape,

    Graphics.Forensics.Analysers,

    Graphics.Forensics.Analyser.Test,
    Graphics.Forensics.Analyser.LuminanceGradient,
    Graphics.Forensics.Analyser.LocalCFA

  -- Packages needed in order to build this package.
  Build-depends:
    base                        == 4.*,
    array                       == 0.3.*,
    colour                      == 2.3.*,
    deepseq                     == 1.1.*,
    dsp                         == 0.2.*,
    monad-coroutine             == 0.7.*,
    mtl                         == 2.0.*,
    repa                        == 2.0.*,
    repa-algorithms             == 2.0.*,
    repa-devil                  == 0.1.*,
    repa-io                     == 2.0.*,
    text                        == 0.11.*,
    transformers                == 0.2.*,
    type-level-natural-number   == 1.1.*,
    containers                  == 0.4.*,
    vect                        == 0.4.*,
    vector                      == 0.7.*

  -- Modules not exported by this package.
  Other-modules:

  -- Extra tools (e.g. alex, hsc2hs, ...) needed to build the source.
  -- Build-tools:

Executable purview-console
  Default-language:
    Haskell2010

  Default-extensions:
    DeriveDataTypeable,
    OverloadedStrings

  GHC-options:
    -Wall -Werror

  Main-is:
    src/Graphics/Forensics/Runner/Console.hs

  Build-depends:
    base                        == 4.*,
    ansi-terminal               == 0.5.*,
    containers                  == 0.4.*,
    cmdargs                     == 0.9.*,
    mtl                         == 2.0.*,
    purview                     == 0.1.*,
    text                        == 0.11.*

Test-suite test-purview
  Type:
    exitcode-stdio-1.0

  Default-language:
    Haskell2010

  Default-extensions:
    FlexibleInstances,
    TemplateHaskell

  GHC-options:
    -Wall -Werror -fno-warn-orphans

  Hs-source-dirs:
    test

  Main-is:
    Test.hs

  Build-depends:
    base                        == 4.*,
    array                       == 0.3.*,
    colour                      == 2.3.*,
    purview                     == 0.1.*,
    repa                        == 2.0.*,
    repa-algorithms             == 2.0.0.*,
    test-framework              == 0.4.*,
    test-framework-th           == 0.2.*,
    test-framework-quickcheck2  == 0.2.*,
    type-level-natural-number   == 1.1.*,
    QuickCheck                  == 2.4.*
